<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    >

  <LinearLayout
      android:id="@+id/doc"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?android:attr/selectableItemBackground"
      android:orientation="horizontal"
      android:padding="16dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_doc"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_doc"
        android:text="Document"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/pdf"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?android:attr/selectableItemBackground"
      android:orientation="horizontal"
      android:padding="16dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_pdf"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_pdf"
        android:text="PDF"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/image"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?android:attr/selectableItemBackground"
      android:orientation="horizontal"
      android:padding="16dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_image"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_image"
        android:text="Image"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/camera"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?android:attr/selectableItemBackground"
      android:orientation="horizontal"
      android:padding="16dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_photo_camera"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_photo_camera"
        android:text="Camera"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/video"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?android:attr/selectableItemBackground"
      android:orientation="horizontal"
      android:padding="16dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_video_camera"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_video_camera"
        android:text="Video"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/audio"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?android:attr/selectableItemBackground"
      android:orientation="horizontal"
      android:padding="16dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_music_player"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_music_player"
        android:text="Audio"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/other"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?android:attr/selectableItemBackground"
      android:orientation="horizontal"
      android:padding="16dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_attach_file_black_24dp"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_attach_file_black_24dp"
        android:text="Other Documents"
        />
  </LinearLayout>
</LinearLayout>