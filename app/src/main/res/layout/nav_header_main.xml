<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom">



    <LinearLayout
        android:id="@+id/navigation_drawer_list_header_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradientnavheader"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_drawer_user_photo"
            android:layout_width="@dimen/profile_user_photo_size"
            android:layout_height="@dimen/profile_user_photo_size"
            android:paddingTop="4dp"
            app:civ_border_color="#FFFF"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/nav_drawer_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="@string/header_unknown_user"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>