<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    >

  <LinearLayout
      android:id="@+id/navigation_drawer_list_header_linear_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/img_header_main"
      android:gravity="start|center"
      android:orientation="vertical"
      android:padding="@dimen/activity_horizontal_margin"
      >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_drawer_user_photo"
        android:layout_width="@dimen/global_menu_avatar_size"
        android:layout_height="@dimen/global_menu_avatar_size"
        app:civ_border_color="#FFFF"
        app:civ_border_width="2dp"
        />

    <TextView
        android:id="@+id/nav_drawer_header_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/header_unknown_user_name"
        android:textColor="@color/white"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/nav_drawer_header_text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_unknown_user_email"
        android:textColor="@color/white"
        android:textSize="16sp"
        />

  </LinearLayout>
</RelativeLayout>